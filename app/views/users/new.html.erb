<%= render 'layouts/header', back: true %>

<!-- Listing group -->
<div class="text-middle" id="postings">

    <div class="panel">
        <div class="panel-heading">
            <strong>
                Sign Up
            </strong>
        </div>

        <%= form_for(@user) do |f| %>
        <div class="form-group">
            <label>First Name</label>
            <%= f.text_field :first_name, :placeholder => "First name", class: "form-control" %>
        </div>
        <div class="form-group">
            <label>Last Name</label>
            <%= f.text_field :last_name, :placeholder => "Last name", class: "form-control" %>
        </div>
        <div class="form-group">
            <label>Email address</label>
            <%= f.email_field :email, :placeholder => "Email", class: "form-control" %>
            <small id="emailHelp" class="form-text text-muted">We'll might experiment on your email without your
                permission.</small>
        </div>
        <div class="form-group">
            <label>Password</label>
            <%= f.password_field :password, :placeholder => "Password", class: "form-control"  %>
        </div>
        <div class="btn-center">
            <%= f.submit "Sign up", class: "btn btn-submit btn-primary sharp-border" %>
        </div>
        <% end %>
    </div>
    
    <%= render "layouts/twitter_button" %>
</div>
